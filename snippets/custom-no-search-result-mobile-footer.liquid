{% if collections[collectionhandle].products.size > 0 %}
<div class="search-main">
    <div id="product-slider" class="px-3">
        <div class="container-lg ">
            <div class="swiper-head">
                {% if collectionhandle == 'trending-products' %}
                <p>Trending Products</p>
                {% else %}
                <p>Other Popular Searches</p>
                {% endif %}
            </div>
        </div>
        <div class="container-lg swiper explore-our-category">
            <div class="swiper-wrapper pt-4 pb-5">
                {% for product in collections[collectionhandle].products %}
                <div class="swiper-slide">
                    <div class="card w-100">
                        <a href="{{product.url}}">
                            <img src="{{ product.featured_image | img_url: 'medium' }}" class="card-img-top w-100" alt="{{ product.title }}" />
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">
                                {{ product.title | link_to: product.url }}
                            </h5>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="explore-our-category-swiper-pagination"></div>
        </div>
    </div>
</div>

<script>
    var swiper = new Swiper(".explore-our-category", {
        slidesPerView: 5,
        breakpoints: {
            200: {
                slidesPerView: 2,
                spaceBetween: 20,
            },
            320: {
                slidesPerView: 2,
                spaceBetween: 20,
            },
            480: {
                slidesPerView: 2,
                spaceBetween: 30,
            },
            768: {
                slidesPerView: 4,
                spaceBetween: 40,
            },
            992: {
                slidesPerView: 4,
                spaceBetween: 40,
            },
        },
        pagination: {
            el: ".explore-our-category-swiper-pagination",
            type: "progressbar",
        },
    });

</script>
{% endif %}