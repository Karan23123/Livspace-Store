<div class="explore-the-range">
  <div id="product-slider" class="px-3 pb-5">
    <div class="container-lg ">
      <div class="swiper-head">
        <p>{{ title }}</p>
      </div>
    </div>
    <div class="container-lg swiper explore-our-category">
      <div class="swiper-wrapper pt-5 pb-5">
        {% for collection in collections %}
          <div class="swiper-slide">
            <div class="card w-100 explocrd">
              <div class="explore-category-photo">
                <a href="{{ collection.url }}">
                  <img src="{{ collection.image | img_url: '180x'}}" class="card-img-top w-100" alt="...">
                </a>
              </div>
              <div class="text-start explore-category-name p-2 p-md-3">
                <a href="{{ collection.url }}">
                  <p>{{ collection.title -}}</p>
                </a>
                <p class="expllore-content-short-text">{{ collection.description }}</p>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="explore-our-category-swiper-pagination"></div>
    </div>
  </div>
</div>

<script>
    var swiper = new Swiper(".explore-our-category", {
    slidesPerView: 5,
    breakpoints: {
      200: {
        slidesPerView: 2,
        spaceBetween: 20,
      },
      320: {
        slidesPerView: 2,
        spaceBetween: 20,
      },
      480: {
        slidesPerView: 3,
        spaceBetween: 30,
      },
      768: {
        slidesPerView: 4,
        spaceBetween: 40,
      },
      992: {
        slidesPerView: 4,
        spaceBetween: 40,
      },
    },
    pagination: {
      el: ".explore-our-category-swiper-pagination",
      type: "progressbar",
    },
  });
</script>
