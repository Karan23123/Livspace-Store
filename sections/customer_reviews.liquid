  "name": "customer Reviews",
"max_blocks": 4,
 
  "blocks": [
    {
      "type": "image",
      "name": "Product Image",
      "settings": [
        {
        "id": "product",
        "type": "image_picker",
        "label": "Product Image"
        },
{
"type": "product",
        "id": "sampleid",
        "label": "Product"
},


        
{
      "id": "text-box",
      "type": "text",
      "label": "Heading",
      "default": "Title"
    }


        
      ]
    }
  ]
}
 
{% endschema %}
 
