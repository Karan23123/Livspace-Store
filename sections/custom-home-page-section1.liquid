<div id="container" class="d-md-block d-none" style="background-color:{{ section.settings.divsectionbg }}">
    <div id="slides_container">
        <span id="next_slide_button" class="next_btn_initial_animation">
            <svg width="48" height="48" viewBox="0 0 48 48" fill="none">
                <circle cx="24" cy="24" r="24" fill="black"></circle>
                <path d="M35.3733 24.0485C35.6287 23.793 35.6287 23.3788 35.3733 23.1234L31.2102 18.9603C30.9548 18.7049 30.5406 18.7049 30.2851 18.9603C30.0297 19.2158 30.0297 19.63
          30.2851 19.8855L33.9856 23.5859L30.2851 27.2864C30.0297 27.5419 30.0297 27.9561 30.2851 28.2115C30.5406 28.467 30.9548 28.467 31.2102 28.2115L35.3733 24.0485ZM12.625
          24.2401H34.9107V22.9318H12.625V24.2401Z" fill="white"></path>
            </svg>
        </span>
        {% for block in section.blocks %}
        <div id="slide{{ forloop.index }}_container"
            class="slide {% if forloop.index == 1 %} slide_active slide1_initial_animation {% elsif forloop.index == 3 %} hide_slide {% endif %}">
            <div class="dfgh">
                <h1
                    class="slide_heading {% if forloop.index == 1 %} head_initial_animation{% endif %}{% if forloop.index == 2 %} mainHead {% endif %}">
                    {{ block.settings.title }}
                    <span>{{ block.settings.sign }}</span>
                </h1>
                <p class="slide_para {% if forloop.index == 2 %} mainPara {% endif %}">{{ block.settings.description }}.
                </p>
                <button class="slide_btn {% if forloop.index == 1 %}btn_initial_animation{% endif %}"
                    onclick="location.href='{{ block.settings.btnurl }}'">
                    {{- block.settings.btntext }}
                    <span style="margin-left: 15px;">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M0.923103 12L23.0769 12" stroke="white" stroke-width="1.84615"
                                stroke-linecap="round" stroke-linejoin="round"></path>
                            <path d="M17.2592 6.18227L23.0769 12L16.9165 18.1605" stroke="white" stroke-width="1.84615"
                                stroke-linecap="round" stroke-linejoin="round"></path>
                        </svg>
                    </span>
                </button>
            </div>
            <div id="slide{{ forloop.index }}_background"
                class="slide_background {% if forloop.index == 1 %}background_initial_animation{% endif %}"
                style="background-color:{{ block.settings.divbg }}">
                <img class="slide_image {% if forloop.index != 1 %}img_initial_animation{% endif %}"
                    src="{{ block.settings.divimg.image |img_url:'original' }}" alt=""
                    style="bottom:{{ block.settings.offset }}">
            </div>
            <img class="slide_image {% if forloop.index != 1 %}img_initial_animation{% endif %} "
                src="{{ block.settings.divimg.image | img_url:'original' }}" alt=""
                style="bottom:{{ block.settings.offset }}">
        </div>
        {% endfor %}
    </div>
    <aside id="slide_bullets_conatiner">
        <span class="slide_bullet slide_bullet_active"></span>
        <span class="slide_bullet"></span>
        <span class="slide_bullet"></span>
    </aside>
</div>

<div class="mobile-slider d-md-none d-block py-5" style="background-color:{{ section.settings.divsectionbg }}">
    <div class="container-lg">
        <div class="swiper mobileSlider">
            <div class="swiper-wrapper">
                {% for block in section.blocks %}
                <div class="swiper-slide">
                    <div class="mobile-slider-inner-section text-center">
                        <div class="mobile-slider-content-section">
                            <h2>{{ block.settings.title }}</h2>
                            <h3>{{ block.settings.sign }}</h3>
                            <p>{{ block.settings.description }}</p>
                            <button>
                                Explore
                                <svg width="18" height="16" viewBox="0 0 18 16" fill="none" style="margin-left: 5px;"
                                    xmlns="http://www.w3.org/2000/svg">
                                    <path d="M1.38463 7.99985L16.6154 7.99985" stroke="white" stroke-width="1.26923"
                                        stroke-linecap="round" stroke-linejoin="round" />
                                    <path d="M12.6106 4.00035L16.6103 8.00006L12.375 12.2354" stroke="white"
                                        stroke-width="1.26923" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                            </button>
                        </div>
                        <div class="mobile-slider-image-section mt-4">
                            <div class="mobile-inner-slider-img" style="background-color:{{ block.settings.divbg }}">
                            </div>
                            <div class="mobile-inner-sliderinside-img">
                                <img src="{{ block.settings.divimg.image |img_url:'original' }}" alt="Slider Image"
                                    class="img-fluid">
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="swiper-button-next">
                <svg width="48" height="48" viewBox="0 0 48 48" fill="none">
                    <circle cx="24" cy="24" r="24" fill="black"></circle>
                    <path d="M35.3733 24.0485C35.6287 23.793 35.6287 23.3788 35.3733 23.1234L31.2102 18.9603C30.9548 18.7049 30.5406 18.7049 30.2851 18.9603C30.0297 19.2158 30.0297 19.63
                    30.2851 19.8855L33.9856 23.5859L30.2851 27.2864C30.0297 27.5419 30.0297 27.9561 30.2851 28.2115C30.5406 28.467 30.9548 28.467 31.2102 28.2115L35.3733 24.0485ZM12.625
                    24.2401H34.9107V22.9318H12.625V24.2401Z" fill="white"></path>
                </svg>
            </div>
        </div>
    </div>
</div>

<script>
    var swiper = new Swiper(".mobileSlider", {
        loop: true,
        navigation: {
            nextEl: ".swiper-button-next",
        },
    });
</script>
<link rel="stylesheet" href="{{ 'customslider.css' | asset_url }}">
<script src="{{ 'customslider.js' | asset_url }}"></script>
