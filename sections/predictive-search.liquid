{%- if predictive_search.resources.products.size > 0 -%}
<div class="search-recent-searches py-2">
    <ul class="search-top-searches-list list-unstyled p-0" id="predictive-search-results-list">
        {%- for product in predictive_search.resources.products -%}
        <li>
            <a href="{{ product.url }}" class="predictive-search__item" tabindex="-1">
                {%- if product.featured_media != blank -%}
                <img class="predictive-search__image" src="{{ product.featured_media | img_url: '450x450' }}"
                    alt="{{ product.featured_media.alt }}" class="img-fluid">
                {%- endif -%}
                <span>{{ product.title }}</span>
            </a>
        </li>
        {%- endfor -%}
    </ul>

</div>
{%- endif -%}
{%- if predictive_search.resources.collections.size > 0 -%}

<ul class="predicitive-text-list">
    {%- for col in predictive_search.resources.collections -%}
    <li>
      <img src="https://cdn.shopify.com/s/files/1/0623/4567/4925/files/Catogories_2x.svg?v=1669895462" />
        <a href="{{ col.url }}" class="predictive-search__item" tabindex="-1">
            {{ col.title }}
        </a>
    </li>
    {% endfor %}
</ul>

<hr />
{% endif %}

