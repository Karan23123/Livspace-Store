<div class="get-inspired">
  <div class="container-lg">
    <div class="get-inspired-head">
      <div class="row">
        <div class="col-12 col-sm-12 col-md-6 col-lg-6">
          <div class="get-inspired-head-text">
            <h5>{{ section.settings.heading }}</h5>
          </div>
        </div>
        <div class="col-12 col-sm-12 col-md-6 col-lg-6 order-5 order-md-0">
          <div class="get-inspired-head-text-button d-flex justify-content-center justify-content-md-end">
            <button type="button">View All</button>
          </div>
        </div>
        <div class="col-12" style="background-color:{{ section.settings.divsectionbg }}">
          <div class="row pllpw">
            {% assign reminder_3 = 1 %}
            {% assign reminder_5 = 2 %}
            {% for block in section.blocks %}
              {% assign reminder_3 = forloop.index | modulo: 3 %}
              {% assign reminder_5 = forloop.index | modulo: 5 %}
              <div class="{% if reminder_5 == 4 or reminder_5 == 0   %}col-md-6 col-lg-6{% else %}col-md-4 col-lg-4 {% endif %} {% if reminder_3 == 0 %}col-12 heightert{% else %}col-6 pllpr{% endif %} pt-md-4 pt-2">
                <div class="get-inspired-inner-images">
                  <div class="get-inspired-img">
                    <img src="{{ block.settings.image |img_url:'original'}}" alt="Get Inspired" class="img-fluid w-100">
                  </div>
                  <div class="get-inspired-hover-text mx-3 p-3">
                    <p>
                      {{ block.settings.text -}}
                      <span>&#8594;</span>
                    </p>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Inspiration Looks",
  "tag":"section",
  "settings": [
    {
      "type": "text",
  			"id": "heading",
  			"label": "Title"
    }
  ],
  "blocks":[
    {
     "type": "look",
     "name": "Add Look",
     "settings": [
     {
         "type": "image_picker",
          "id": "image",
          "label": "Image"
     },
       {
         "type": "text",
          "id": "text",
          "label": "Heading"
     },
       {
         "type": "text",
          "id": "url",
          "label": "URL"
     }

     ]
    }
  ],
   "presets": [
  {
  "name": "Inspiration Looks",
  "category": "Home Page Section"
  }
   ]
}
{% endschema %}

